.usertop {
  width: 100%;
  height: 600rpx;
  background-color: #2a82e4;
  border-bottom-left-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
  z-index: -999;
  text-align: center;
}
.usertop image {
  height: 300px;
  width: 300px;
}
.release {
  position: absolute;
  left: 50%;
  transform: translateX(-125px);
  height: 80px;
  width: 250px;
  background-color: #2a82e4;
  border-radius: 20px;
}
.release image {
  width: 40px;
  height: 40px;
  margin: 20px 0 10px 20px;
}
.release .textUp {
  position: absolute;
  top: 15px;
  left: 80px;
  font-size: 20px;
  color: #fff;
}
.release .textDown {
  position: absolute;
  top: 45px;
  left: 80px;
  font-size: 14px;
  color: #c2c2c2;
}
